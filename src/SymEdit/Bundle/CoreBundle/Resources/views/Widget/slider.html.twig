<div id="slider-{{ slider.name }}" class="carousel slide{{ stretch|default(false) ? ' stretch' : '' }}">
    <ol class="carousel-indicators">
        {% for slide in slider.slides %}
        <li data-target="#slider-{{ slider.name }}" data-slide-to="{{ loop.index0 }}"{% if loop.first %} class="active"{% endif %}></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for slide in slider.slides %}
            <div class="item{% if loop.first %} active{% endif %}">
                <img src="{{ slide.image.webpath }}" alt="{{ (slide.caption|plain)|default('slider ' ~ loop.index) }}">
                {% if slide.caption %}
                <div class="carousel-caption{% if slide.position %} {{ slide.position }}{% endif %}">
                    {{ slide.caption }}
                </div>
                {% endif %}
            </div>
         {% endfor %}
     </div>
</div>