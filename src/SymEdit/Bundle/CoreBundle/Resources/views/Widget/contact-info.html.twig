{% set type = sylius_settings('seo')['business_type'] %}
<div itemscope itemtype="http://schema.org/{{ type }}">
    <address>
        {% set company = sylius_settings('company') %}
        {% if company.name is not empty %}<strong>{{ company.name }}</strong><br>{% endif %}
        {% if company.address is not empty %}<span itemprop="address">{{ company.address|nl2br }}</span> <br>{% endif %}
        {% if company.phone is not empty %}<span itemprop="telephone">{{ company.phone }}</span> <br>{% endif %}
        {% if company.email is not empty %}<span itemprop="email"><a href="mailto:{{ company.email }}">{{ company.email }}</a></span>{% endif %}
    </address>
</div>
