{% set type = symedit_settings_default('seo.business_type', 'LocalBusiness') %}
<div itemscope itemtype="http://schema.org/{{ type }}">
    <address>
        {% set company = symedit_settings_get('company') %}
        {% if company.name is not empty %}<strong>{{ company.name }}</strong><br>{% endif %}
        {% if company.address is not empty %}<span itemprop="address">{{ symedit_settings_get('company.address')|nl2br }}</span> <br>{% endif %}
        {% if company.phone is not empty %}<span itemprop="telephone">{{ symedit_settings_get('company.phone') }}</span> <br>{% endif %}
        {% if company.email is not empty %}<span itemprop="email"><a href="mailto:{{ symedit_settings_get('company.email') }}">{{ symedit_settings_get('company.email') }}</a></span>{% endif %}
    </address>
</div>