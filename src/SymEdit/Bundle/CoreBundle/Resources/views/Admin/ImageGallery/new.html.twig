{% extends '@SymEdit/Admin/tabbed.html.twig' %}

{% block title %}Gallery &raquo; New{% endblock %}

{% block tabs %}
{{ form_tabs(form) }}
{% endblock %}

{% block tab_content %}
{{ form_widget(form) }}
{% endblock %}

{% block form_actions %}
<button class="btn btn-primary btn-block" type="submit">Create Gallery</button>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    input[type=checkbox] {
        position: absolute;
        left: -9999px;
        top: -9999px;
    }

    input[type=checkbox]:checked ~ img {
        border: 4px solid red;
    }
</style>
{% endblock %}
