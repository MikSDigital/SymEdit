{% extends '@SymEdit/Admin/base.html.twig' %}

{% block title %}File &raquo; {{ file.name }} &raquo; Edit{% endblock %}

{% block content %}

<div class="text-center well">
    <a href="{{ file.webPath }}" target="_blank" class="btn btn-primary btn-lg">
        View File
        {{ icon('external-link') }}
    </a>

    <div>
        {{ file.webPath }}
    </div>
</div>

{{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update Image</button>
        <button type="button" data-toggle="form-forward" data-message="Are you sure you want to delete this file?" data-target="#file-delete" class="btn btn-warning">Delete Image</button>
    </div>
{{ form_end(form) }}

{#{{ form(delete_form, {attr: {id: 'file-delete', class: 'form-hidden'}}) }}#}

{% endblock %}