{% extends '@SymEdit/Admin/base.html.twig' %}

{% block title %}Files &raquo; List{% endblock %}

{% block content %}

<div class="row">
  {% for file in files %}
  <div class="col-md-2">
      <a class="thumbnail icon" href="{{ path('admin_file_update', {id:file.id}) }}">
          {{ icon('file') }}
          {{ file.path }}
      </a>
  </div>
  {% endfor %}
</div>

<div class="form-actions">
    <a class="btn btn-primary" href="{{ path('admin_file_create') }}">
        Add New File
    </a>
</div>
{% endblock %}