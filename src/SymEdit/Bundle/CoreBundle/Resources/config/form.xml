<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.form.type.role.class">SymEdit\Bundle\CoreBundle\Form\Type\RoleType</parameter>
        <parameter key="symedit.form.type.entity_property.class">SymEdit\Bundle\CoreBundle\Form\Type\EntityPropertyType</parameter>
        <parameter key="symedit.form.factory.context.class">SymEdit\Bundle\CoreBundle\Form\Factory\ContextFormFactory</parameter>
    </parameters>

    <services>
        <service id="symedit.form.type.contact" class="%symedit.form.type.contact.class%">
            <tag name="form.type" alias="symedit_contact" />
        </service>

        <service id="symedit.form.type.page" class="%symedit.form.type.page.class%">
            <argument type="service" id="symedit.repository.page" />
            <tag name="form.type" alias="symedit_page" />
        </service>

        <service id="symedit.form.type.role" class="%symedit.form.type.role.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="security.context" />
            <tag name="form.type" alias="symedit_role" />
        </service>

        <service id="symedit.form.type.user" class="%symedit.form.type.user.class%">
            <argument>%fos_user.model.user.class%</argument>
            <tag name="form.type" alias="symedit_user" />
        </service>

        <service id="symedit.form.type.widget_area" class="%symedit.form.type.widget_area.class%">
            <tag name="form.type" alias="symedit_widget_area" />
        </service>

        <service id="symedit.form.type.widget" class="%symedit.form.type.widget.class%">
            <argument>%symedit.model.widget.class%</argument>
            <argument>%symedit.model.widget_area.class%</argument>
            <tag name="form.type" alias="symedit_widget" />
        </service>

        <service id="symedit.form.type.entity_property" class="%symedit.form.type.entity_property.class%">
            <argument type="service" id="doctrine" />
            <tag name="form.type" alias="entity_property" />
        </service>

        <!--  Form Factory -->

        <service id="symedit.form.factory.context" class="%symedit.form.factory.context.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.context" />
            <argument type="collection">
                <argument key="adminType">symedit_admin_profile</argument>
                <argument key="userType">symedit_profile</argument>
                <argument key="name">symedit_profile</argument>
            </argument>
        </service>
    </services>

</container>
