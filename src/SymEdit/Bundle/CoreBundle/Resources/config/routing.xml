<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.routing.loader.page.class">SymEdit\Bundle\CoreBundle\Routing\PageLoader</parameter>
        <parameter key="symedit.routing.loader.controller.class">SymEdit\Bundle\CoreBundle\Routing\ControllerLoader</parameter>
        <parameter key="symedit.routing.loader.yaml.class">SymEdit\Bundle\CoreBundle\Routing\YamlFileLoader</parameter>
        <parameter key="symedit.routing.loader.page_controller.class">SymEdit\Bundle\CoreBundle\Routing\PageControllerLoader</parameter>
    </parameters>

    <services>
        <service id="symedit.routing.loader.page_controller" public="false" class="%symedit.routing.loader.page_controller.class%">
            <argument type="service" id="symedit.repository.page" />
        </service>

        <service id="symedit.routing.loader.page" public="false" class="%symedit.routing.loader.page.class%">
            <argument type="service" id="symedit.repository.page" />
            <tag name="routing.loader" />
        </service>
    </services>

</container>