<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.repository.page.class">SymEdit\Bundle\CoreBundle\Doctrine\ORM\PageRepository</parameter>
        <parameter key="symedit.repository.slider.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="symedit.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager">
            <argument>%symedit.model_manager_name%</argument>
        </service>

        <!-- Page -->
        <service id="symedit.manager.page" alias="symedit.entity_manager" />
        <service id="symedit.repository.page" class="%symedit.repository.page.class%">
            <argument type="service" id="symedit.manager.page" />
            <argument type="service">
                <service
                    factory-service="symedit.manager.page"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%symedit.model.page.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Slider -->
        <service id="symedit.manager.slider" alias="symedit.entity_manager" />
        <service id="symedit.repository.slider" class="%symedit.repository.slider.class%">
            <argument type="service" id="symedit.manager.slider" />
            <argument type="service">
                <service
                    factory-service="symedit.manager.slider"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%symedit.model.slider.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Listeners -->
        <service id="symedit.listener.page_path" class="SymEdit\Bundle\CoreBundle\Doctrine\ORM\PagePathListener">
            <argument type="service" id="router" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>