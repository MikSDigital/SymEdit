<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.repository.page.class">SymEdit\Bundle\CoreBundle\Doctrine\ORM\PageRepository</parameter>
    </parameters>

    <services>
        <!-- Listeners -->
        <service id="symedit.listener.page_path" class="SymEdit\Bundle\CoreBundle\Doctrine\ORM\PagePathListener">
            <argument type="service" id="router" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>