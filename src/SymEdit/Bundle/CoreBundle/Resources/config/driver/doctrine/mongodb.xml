<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="symedit.document_manager" factory-service="doctrine_mongodb" factory-method="getManager" class="Doctrine\ODM\MongoDB\DocumentManager" public="false">
            <argument>%symedit.model_manager_name%</argument>
        </service>

        <!-- Managers -->

        <service id="symedit.widget.manager" class="%symedit.widget.manager.class%">
            <argument>%symedit.model.widget.class%</argument>
            <argument>%symedit.model.widget_area.class%</argument>
            <argument type="service" id="symedit.widget.registry" />
            <argument type="service" id="symedit.document_manager" />
        </service>

        <!-- Listeners -->

        <service id="symedit.listener.page_path" class="SymEdit\Bundle\CoreBundle\Doctrine\MongoDB\PagePathListener">
            <argument type="service" id="router" />
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="symedit.widget.listener" class="SymEdit\Bundle\CoreBundle\Doctrine\MongoDB\WidgetListener">
            <argument type="service" id="symedit.widget.registry" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>