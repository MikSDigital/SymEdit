<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit_settings.factory.class">SymEdit\Bundle\SettingsBundle\Factory\ServiceFactory</parameter>
        <parameter key="symedit_settings.cache_folder">symedit_settings</parameter>
        <parameter key="symedit_settings.loader.loader_chain.class">SymEdit\Bundle\SettingsBundle\Loader\LoaderChain</parameter>
        <parameter key="symedit_settings.loader.yaml_files_loader.class">SymEdit\Bundle\SettingsBundle\Loader\YamlFilesLoader</parameter>
        <parameter key="symedit_settings.loader.xml_files_loader.class">SymEdit\Bundle\SettingsBundle\Loader\XmlFilesLoader</parameter>
        <parameter key="symedit_settings.settings.class">SymEdit\Bundle\SettingsBundle\Model\Settings</parameter>
        <parameter key="symedit_settings.form.settings.class">SymEdit\Bundle\SettingsBundle\Form\Type\SettingsType</parameter>
    </parameters>

    <services>
        <service id="symedit_settings.factory" class="%symedit_settings.factory.class%">
            <argument type="service" id="symedit_settings.settings" />
        </service>

        <service id="symedit_settings.loader.loader_chain" class="%symedit_settings.loader.loader_chain.class%">
            <argument type="collection">
                <argument type="service" id="symedit_settings.loader.yaml_files_loader" />
                <!--<argument type="service" id="symedit_settings.loader.xml_files_loader" />-->
            </argument>
        </service>

        <service id="symedit_settings.loader.yaml_files_loader" class="%symedit_settings.loader.yaml_files_loader.class%">
            <argument>%symedit_settings.loader.files.yaml%</argument>
        </service>

        <service id="symedit_settings.settings" class="%symedit_settings.settings.class%">
            <argument type="service" id="symedit_settings.loader.loader_chain" />
            <argument>%kernel.root_dir%</argument>
            <argument>%kernel.cache_dir%/%symedit_settings.cache_folder%</argument>
            <argument>%kernel.debug%</argument>
        </service>
        <!--
        <service id="symedit_settings.loader.xml_files_loader" class="%symedit_settings.loader.xml_files_loader.class%">
            <argument>%symedit_settings.loader.files.xml%</argument>
        </service>
        -->


        <service id="form.type.settings" class="%symedit_settings.form.settings.class%">
            <argument type="service" id="symedit_settings.settings" />
            <argument type="service" id="security.context" />
            <tag name="form.type" alias="settings" />
        </service>

        <service id="symedit_settings.event_listener.request" class="SymEdit\Bundle\SettingsBundle\EventListener\RequestListener">
            <argument type="service" id="symedit_settings.settings" />
            <tag name="kernel.event_listener" event="kernel.request" />
        </service>
    </services>
</container>
