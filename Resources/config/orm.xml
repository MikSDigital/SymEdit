<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.model.page.class">Isometriks\Bundle\SymEditBundle\Model\Page</parameter>
        <parameter key="isometriks_symedit.model.post.class">Isometriks\Bundle\SymEditBundle\Model\Post</parameter>
        <parameter key="isometriks_symedit.model.widget.class">Isometriks\Bundle\SymEditBundle\Model\Widget</parameter>
        <parameter key="isometriks_symedit.model.widget_area.class">Isometriks\Bundle\SymEditBundle\Model\WidgetArea</parameter>        
    </parameters>

    <services>
        <service id="isometriks_symedit.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false" />

        <service id="isometriks_symedit.page_manager" class="Isometriks\Bundle\SymEditBundle\Doctrine\PageManager">
            <argument type="service" id="isometriks_symedit.entity_manager" />
            <argument>%isometriks_symedit.model.page.class%</argument>
        </service>

        <service id="isometriks_symedit.post_manager" class="Isometriks\Bundle\SymEditBundle\Doctrine\PostManager">
            <argument type="service" id="isometriks_symedit.entity_manager" />
            <argument>%isometriks_symedit.model.post.class%</argument>
        </service>

        <!-- ORM Listeners -->

        <service id="isometriks_symedit.listener.page_path" class="Isometriks\Bundle\SymEditBundle\Doctrine\Orm\PagePathListener">
            <argument type="service" id="router" />
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="isometriks_symedit.widget.listener" class="Isometriks\Bundle\SymEditBundle\Doctrine\Orm\WidgetListener">
            <argument type="service" id="isometriks_symedit.widget.registry" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>

</container>