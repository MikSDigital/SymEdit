<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="isometriks_sym_edit.listener.page_path.class">Isometriks\Bundle\SymEditBundle\EventListener\PagePathListener</parameter>
        <parameter key="isometriks_sym_edit.listener.controller.class">Isometriks\Bundle\SymEditBundle\EventListener\ControllerListener</parameter>
        <parameter key="isometriks_sym_edit.listener.chunk.class">Isometriks\Bundle\SymEditBundle\EventListener\ChunkListener</parameter>
    </parameters>
    
    <services>
        <service id="isometriks_sym_edit.listener.controller_listener" class="%isometriks_sym_edit.listener.controller.class%">
            <argument type="service" id="router" />
            <argument type="service" id="annotation_reader" />
            <argument type="service" id="doctrine" />    
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="24" />
        </service>
        
        <service id="isometriks_sym_edit.listener.page_path" class="%isometriks_sym_edit.listener.page_path.class%">
            <argument type="service" id="router" />
            <tag name="doctrine.event_listener" event="postPersist" />
            <tag name="doctrine.event_listener" event="postUpdate" />
        </service>
        
        <service id="isometriks_sym_edit.listener.chunk" class="%isometriks_sym_edit.listener.chunk.class%">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event="postLoad" />
        </service>
    </services>

</container>