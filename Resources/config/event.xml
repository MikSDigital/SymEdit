<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.listener.controller.class">Isometriks\Bundle\SymEditBundle\EventListener\ControllerListener</parameter>
        <parameter key="isometriks_symedit.listener.breadcrumb.class">Isometriks\Bundle\SymEditBundle\EventListener\BreadcrumbListener</parameter>
    </parameters>

    <services>
        <service id="isometriks_symedit.listener.controller_listener" class="%isometriks_symedit.listener.controller.class%">
            <argument type="service" id="isometriks_symedit.page_manager" />
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="24" />
        </service>

        <service id="isometriks_symedit.listener.breadcrumb" class="%isometriks_symedit.listener.breadcrumb.class%">
            <argument type="service" id="isometriks_symedit.breadcrumbs" />
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" priority="12" />
        </service>
    </services>

</container>