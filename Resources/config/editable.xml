<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.editable.registry.class">Isometriks\Bundle\SymEditBundle\Editable\EditableRegistry</parameter>
        <parameter key="isometriks_sym_edit.editable.extension.entity_attribute.class">Isometriks\Bundle\SymEditBundle\Editable\Extension\EntityAttribute\EntityAttributeExtension</parameter>
        <parameter key="isometriks_sym_edit.editable.extension.chunk.class">Isometriks\Bundle\SymEditBundle\Editable\Extension\Chunk\ChunkExtension</parameter>
        <parameter key="isometriks_sym_edit.editable.extension.chunk.registry.class">Isometriks\Bundle\SymEditBundle\Editable\Extension\Chunk\ChunkRegistry</parameter>
        <parameter key="isometriks_sym_edit.editable.extension.chunk.manager.class">Isometriks\Bundle\SymEditBundle\Editable\Extension\Chunk\ChunkManager</parameter>
    </parameters>
    
    <services>
        <service id="isometriks_sym_edit.editable.registry" class="%isometriks_sym_edit.editable.registry.class%">
            <argument type="service" id="service_container" />
            <argument>%isometriks_sym_edit.editable.extensions%</argument>
        </service>
        
        <service id="isometriks_sym_edit.editable.extension.entity_attribute" class="%isometriks_sym_edit.editable.extension.entity_attribute.class%">
            <tag name="symedit.editable.extension" />
        </service>
        
        <service id="isometriks_sym_edit.editable.extension.chunk" class="%isometriks_sym_edit.editable.extension.chunk.class%">
            <argument type="service" id="symedit.editable.chunk.registry" />
            <argument type="service" id="isometriks_sym_edit.editable.extension.chunk.manager" />
            <argument type="service" id="doctrine" />
            <tag name="symedit.editable.extension" />
        </service>
        
        <service id="isometriks_sym_edit.editable.extension.chunk.registry" class="%isometriks_sym_edit.editable.extension.chunk.registry.class%" />
        <service id="symedit.editable.chunk.registry" alias="isometriks_sym_edit.editable.extension.chunk.registry" />
        
        <service id="isometriks_sym_edit.editable.extension.chunk.manager" class="%isometriks_sym_edit.editable.extension.chunk.manager.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="symedit.editable.chunk.registry" />
        </service>
        
        <service id="symedit.editable.chunk.manager" alias="isometriks_sym_edit.editable.extension.chunk.manager" />
    </services>

</container>