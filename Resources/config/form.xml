<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.form.contact.class">Isometriks\Bundle\SymEditBundle\Form\ContactType</parameter>
        <parameter key="isometriks_symedit.form.type.page.class">Isometriks\Bundle\SymEditBundle\Form\PageType</parameter>
        <parameter key="isometriks_symedit.form.type.template.class">Isometriks\Bundle\SymEditBundle\Form\Type\TemplateType</parameter>
        <parameter key="isometriks_symedit.form.type.role.class">Isometriks\Bundle\SymEditBundle\Form\Type\RoleType</parameter>
        <parameter key="isometriks_symedit.form.type.post.class">Isometriks\Bundle\SymEditBundle\Form\PostType</parameter>
        <parameter key="isometriks_symedit.form.type.user.class">Isometriks\Bundle\SymEditBundle\Form\UserType</parameter>
        <parameter key="isometriks_symedit.form.type.widget_area.class">Isometriks\Bundle\SymEditBundle\Form\WidgetAreaType</parameter>
        <parameter key="isometriks_symedit.form.type.widget.class">Isometriks\Bundle\SymEditBundle\Form\WidgetType</parameter>
        <parameter key="isometriks_symedit.form.type.entity_property.class">Isometriks\Bundle\SymEditBundle\Form\Type\EntityPropertyType</parameter>

        <parameter key="isometriks_symedit.form.factory.context.class">Isometriks\Bundle\SymEditBundle\Form\Factory\ContextFormFactory</parameter>
    </parameters>

    <services>
        <service id="isometriks_symedit.form.contact" class="%isometriks_symedit.form.contact.class%">
            <tag name="form.type" alias="symedit_contact" />
        </service>
        
        <service id="isometriks_symedit.form.type.page" class="%isometriks_symedit.form.type.page.class%">
            <argument type="service" id="isometriks_symedit.page_manager" />
            <tag name="form.type" alias="symedit_page" />
        </service>

        <service id="isometriks_symedit.form.type.template" class="%isometriks_symedit.form.type.template.class%">
            <argument type="service" id="isometriks_symedit.finder.resource_finder" />
            <argument type="service" id="kernel" />
            <tag name="form.type" alias="symedit_template" />
        </service>

        <service id="isometriks_symedit.form.type.role" class="%isometriks_symedit.form.type.role.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="security.context" />
            <tag name="form.type" alias="symedit_role" />
        </service>

        <service id="isometriks_symedit.form.type.post" class="%isometriks_symedit.form.type.post.class%">
            <argument>%fos_user.model.user.class%</argument>
            <tag name="form.type" alias="symedit_post" />
        </service>

        <service id="isometriks_symedit.form.type.user" class="%isometriks_symedit.form.type.user.class%">
            <argument>%fos_user.model.user.class%</argument>
            <tag name="form.type" alias="symedit_user" />
        </service>

        <service id="isometriks_symedit.form.type.widget_area" class="%isometriks_symedit.form.type.widget_area.class%">
            <tag name="form.type" alias="symedit_widget_area" />
        </service>

        <service id="isometriks_symedit.form.type.widget" class="%isometriks_symedit.form.type.widget.class%">
            <argument>%isometriks_symedit.model.widget.class%</argument>
            <argument>%isometriks_symedit.model.widget_area.class%</argument>
            <tag name="form.type" alias="symedit_widget" />
        </service>

        <service id="isometriks_symedit.form.type.entity_property" class="%isometriks_symedit.form.type.entity_property.class%">
            <argument type="service" id="doctrine" />
            <tag name="form.type" alias="entity_property" />
        </service>

        <!--  Form Factory -->

        <service id="isometriks_symedit.form.factory.context" class="%isometriks_symedit.form.factory.context.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.context" />
        </service>

        <service id="isometriks_symedit.form.profile" factory-method="createForm" factory-service="isometriks_symedit.form.factory.context" class="Symfony\Component\Form\Form">
            <argument>symedit_admin_profile</argument>
            <argument>symedit_user_profile</argument>
            <argument>symedit_profile</argument>
        </service>
    </services>

</container>