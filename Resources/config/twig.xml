<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.twig.symedit_extension.class">Isometriks\Bundle\SymEditBundle\Twig\Extension\SymEditExtension</parameter>
        <parameter key="isometriks_sym_edit.twig.controller.exception.class">Isometriks\Bundle\SymEditBundle\Controller\ExceptionController</parameter>
    </parameters>

    <services>
        <service id="isometriks_sym_edit.twig.symedit_extension" class="%isometriks_sym_edit.twig.symedit_extension.class%">
            <argument type="service" id="service_container" />
            <argument>%isometriks_sym_edit.host_bundle%</argument>
            <argument>%isometriks_sym_edit.extensions.routes%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
     
</container>