<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.user_manager.class">Isometriks\Bundle\SymEditBundle\Doctrine\UserManager</parameter>
    </parameters>
    
    <services>
        <service id="isometriks_sym_edit.user_manager" parent="fos_user.user_manager.default" class="%isometriks_sym_edit.user_manager.class%">
            <call method="setProfileClass">
                <argument>%isometriks_sym_edit.entity.profile_class%</argument>
            </call>
            
            <call method="setAdminProfileClass">
                <argument>%isometriks_sym_edit.entity.admin_profile_class%</argument>
            </call>
        </service>
    </services>
    
</container>