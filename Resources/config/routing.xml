<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.routing.loader.page.class">Isometriks\Bundle\SymEditBundle\Routing\PageLoader</parameter>
        <parameter key="isometriks_sym_edit.routing.loader.controller.class">Isometriks\Bundle\SymEditBundle\Routing\ControllerLoader</parameter>
    </parameters>
    
    <services>
        <service id="isometriks_sym_edit.routing.loader.page" class="%isometriks_sym_edit.routing.loader.page.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="routing.loader" />
        </service>       
    </services>
    
</container>