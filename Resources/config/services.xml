<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.finder.resource_finder.class">Isometriks\Bundle\SymEditBundle\Finder\ResourceFinder</parameter>
        <parameter key="isometriks_symedit.breadcrumbs.class">Isometriks\Bundle\SymEditBundle\Model\Breadcrumbs</parameter>
        <parameter key="isometriks_symedit.security_handler.class">Isometriks\Bundle\SymEditBundle\Handler\SecurityHandler</parameter>
    </parameters>

    <services>
        <service id="isometriks_symedit.finder.resource_finder" class="%isometriks_symedit.finder.resource_finder.class%">
            <argument type="service" id="kernel" />
        </service>

        <service id="isometriks_symedit.breadcrumbs" class="%isometriks_symedit.breadcrumbs.class%" />

        <service id="isometriks_symedit.security_handler" class="%isometriks_symedit.security_handler.class%">
            <argument type="service" id="router" />
            <argument type="service" id="security.context" />
        </service>
    </services>

</container>