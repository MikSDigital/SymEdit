<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>    
        <parameter key="isometriks_sym_edit.admin_dir">sym-admin</parameter>
        <parameter key="isometriks_sym_edit.finder.resource_finder.class">Isometriks\Bundle\SymEditBundle\Finder\ResourceFinder</parameter>
    </parameters>
    
    <services>        
        <service id="isometriks_sym_edit.finder.resource_finder" class="%isometriks_sym_edit.finder.resource_finder.class%">
            <argument>%isometriks_sym_edit.host_bundle%</argument>
            <argument type="service" id="kernel" />
        </service>
    </services>

</container>