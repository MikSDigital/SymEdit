<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.finder.resource_finder.class">Isometriks\Bundle\SymEditBundle\Finder\ResourceFinder</parameter>
        <parameter key="isometriks_sym_edit.view.guesser.class">Isometriks\Bundle\SymEditBundle\Templating\TemplateGuesser</parameter>
        <parameter key="isometriks_sym_edit.breadcrumbs.class">Isometriks\Bundle\SymEditBundle\Model\Breadcrumbs</parameter>
        <parameter key="isometriks_sym_edit.security_handler.class">Isometriks\Bundle\SymEditBundle\Handler\SecurityHandler</parameter>
    </parameters>
    
    <services>        
        <service id="isometriks_sym_edit.finder.resource_finder" class="%isometriks_sym_edit.finder.resource_finder.class%">
            <argument>%isometriks_sym_edit.host_bundle%</argument>
            <argument type="service" id="kernel" />
        </service>
        
        <service id="isometriks_sym_edit.breadcrumbs" class="%isometriks_sym_edit.breadcrumbs.class%" />
        
        <service id="isometriks_sym_edit.security_handler" class="%isometriks_sym_edit.security_handler.class%">
            <argument type="service" id="router" />
            <argument type="service" id="security.context" />
        </service>
    </services>

</container>