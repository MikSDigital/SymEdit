<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.repository.page.class">Isometriks\Bundle\SymEditBundle\Doctrine\ORM\PageRepository</parameter>
        <parameter key="isometriks_symedit.repository.post.class">Isometriks\Bundle\SymEditBundle\Doctrine\ORM\PostRepository</parameter>
        <parameter key="isometriks_symedit.repository.category.class">Isometriks\Bundle\SymEditBundle\Doctrine\ORM\CategoryRepository</parameter>
        <parameter key="isometriks_symedit.repository.image.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="isometriks_symedit.repository.widget.class">Isometriks\Bundle\SymEditBundle\Doctrine\ORM\WidgetRepository</parameter>
        <parameter key="isometriks_symedit.repository.widget_area.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="isometriks_symedit.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager">
            <argument>%isometriks_symedit.model_manager_name%</argument>
        </service>

        <!-- Page -->
        <service id="isometriks_symedit.manager.page" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.page" class="%isometriks_symedit.repository.page.class%">
            <argument type="service" id="isometriks_symedit.manager.page" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.page"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.page.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Post -->
        <service id="isometriks_symedit.manager.post" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.post" class="%isometriks_symedit.repository.post.class%">
            <argument type="service" id="isometriks_symedit.manager.post" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.post"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.post.class%</argument>
                </service>
            </argument>
        </service>

        <!-- User -->
        <service id="isometriks_symedit.repository.user" class="%isometriks_symedit.repository.post.class%">
            <argument type="service" id="isometriks_symedit.entity_manager" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.entity_manager"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.user.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Category -->
        <service id="isometriks_symedit.manager.category" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.category" class="%isometriks_symedit.repository.category.class%">
            <argument type="service" id="isometriks_symedit.manager.category" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.category"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.category.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Image -->
        <service id="isometriks_symedit.manager.image" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.image" class="%isometriks_symedit.repository.image.class%">
            <argument type="service" id="isometriks_symedit.manager.image" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.image"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.image.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Widget -->
        <service id="isometriks_symedit.manager.widget" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.widget" class="%isometriks_symedit.repository.widget.class%">
            <argument type="service" id="isometriks_symedit.manager.widget" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.widget"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.widget.class%</argument>
                </service>
            </argument>
            <argument type="service" id="isometriks_symedit.widget.registry" />
        </service>

        <!-- Widget Area -->
        <service id="isometriks_symedit.manager.widget_area" alias="isometriks_symedit.entity_manager" />
        <service id="isometriks_symedit.repository.widget_area" class="%isometriks_symedit.repository.widget_area.class%">
            <argument type="service" id="isometriks_symedit.manager.widget_area" />
            <argument type="service">
                <service
                    factory-service="isometriks_symedit.manager.widget_area"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%isometriks_symedit.model.widget_area.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Listeners -->
        <service id="isometriks_symedit.listener.page_path" class="Isometriks\Bundle\SymEditBundle\Doctrine\ORM\PagePathListener">
            <argument type="service" id="router" />
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="isometriks_symedit.widget.listener" class="Isometriks\Bundle\SymEditBundle\Doctrine\ORM\WidgetListener">
            <argument type="service" id="isometriks_symedit.widget.registry" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>

</container>