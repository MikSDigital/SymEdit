<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_sym_edit.twig.widget_extension.class">Isometriks\Bundle\SymEditBundle\Twig\Extension\WidgetExtension</parameter>
        <parameter key="isometriks_sym_edit.widget.registry.class">Isometriks\Bundle\SymEditBundle\Widget\WidgetRegistry</parameter>
        <parameter key="isometriks_sym_edit.widget.manager.class">Isometriks\Bundle\SymEditBundle\Widget\WidgetManager</parameter>
        <parameter key="isometriks_sym_edit.widget.listener.class">Isometriks\Bundle\SymEditBundle\EventListener\WidgetListener</parameter>
        
        <parameter key="isometriks_sym_edit.widget.class">Isometriks\Bundle\SymEditBundle\Entity\Widget</parameter>
        <parameter key="isometriks_sym_edit.widget_area.class">Isometriks\Bundle\SymEditBundle\Entity\WidgetArea</parameter>
        
        <parameter key="isometriks_sym_edit.widget.strategy.html.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\HtmlStrategy</parameter>
        <parameter key="isometriks_sym_edit.widget.strategy.recent_posts.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\RecentPostsStrategy</parameter>
    </parameters>
    
    <services>      
        
        <service id="isometriks_sym_edit.twig.widget_extension" class="%isometriks_sym_edit.twig.widget_extension.class%">
            <tag name="twig.extension" />
        </service>        
           
        <service id="isometriks_sym_edit.widget.registry" class="%isometriks_sym_edit.widget.registry.class%">
            <argument type="service" id="service_container" />
            <argument>%isometriks_sym_edit.widget.strategies%</argument>
        </service>
        
        <service id="isometriks_sym_edit.widget.manager" class="%isometriks_sym_edit.widget.manager.class%">
            <argument>%isometriks_sym_edit.widget.class%</argument>
            <argument>%isometriks_sym_edit.widget_area.class%</argument>
            <argument type="service" id="doctrine" />
        </service>
        
        <service id="isometriks_sym_edit.widget.listener" class="%isometriks_sym_edit.widget.listener.class%">
            <argument type="service" id="isometriks_sym_edit.widget.registry" />
            <tag name="doctrine.event_listener" event="postLoad" />
        </service>        
        
        <!-- Widget Strategies -->
        
        <service id="isometriks_sym_edit.widget.strategy.html" class="%isometriks_sym_edit.widget.strategy.html.class%">
            <tag name="symedit.widget_strategy" />
        </service>
        
        <service id="isometriks_sym_edit.widget.strategy.recent_posts" class="%isometriks_sym_edit.widget.strategy.recent_posts.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="doctrine" />
            <argument>%isometriks_sym_edit.host_bundle%</argument>
            <tag name="symedit.widget_strategy" />
        </service>
    </services>

</container>