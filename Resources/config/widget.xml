<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.twig.widget_extension.class">Isometriks\Bundle\SymEditBundle\Twig\Extension\WidgetExtension</parameter>
        <parameter key="isometriks_symedit.widget.registry.class">Isometriks\Bundle\SymEditBundle\Widget\WidgetRegistry</parameter>
        <parameter key="isometriks_symedit.widget.manager.class">Isometriks\Bundle\SymEditBundle\Widget\WidgetManager</parameter>
        <parameter key="isometriks_symedit.widget.listener.class">Isometriks\Bundle\SymEditBundle\EventListener\WidgetListener</parameter>

        <parameter key="isometriks_symedit.widget.class">Isometriks\Bundle\SymEditBundle\Entity\Widget</parameter>
        <parameter key="isometriks_symedit.widget_area.class">Isometriks\Bundle\SymEditBundle\Entity\WidgetArea</parameter>

        <parameter key="isometriks_symedit.widget.strategy.html.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\HtmlStrategy</parameter>
        <parameter key="isometriks_symedit.widget.strategy.template.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\TemplateStrategy</parameter>
        <parameter key="isometriks_symedit.widget.strategy.contact_info.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\ContactInfoStrategy</parameter>
        <parameter key="isometriks_symedit.widget.strategy.blog_recent_posts.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\RecentPostsStrategy</parameter>
        <parameter key="isometriks_symedit.widget.strategy.blog_categories.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\BlogCategoriesStrategy</parameter>
        <parameter key="isometriks_symedit.widget.strategy.slider.class">Isometriks\Bundle\SymEditBundle\Widget\Strategy\SliderStrategy</parameter>
    </parameters>

    <services>

        <service id="isometriks_symedit.twig.widget_extension" class="%isometriks_symedit.twig.widget_extension.class%">
            <tag name="twig.extension" />
        </service>

        <service id="isometriks_symedit.widget.registry" class="%isometriks_symedit.widget.registry.class%">
            <argument type="service" id="service_container" />
            <argument>%isometriks_symedit.widget.strategies%</argument>
        </service>

        <service id="isometriks_symedit.widget.manager" class="%isometriks_symedit.widget.manager.class%">
            <argument>%isometriks_symedit.widget.class%</argument>
            <argument>%isometriks_symedit.widget_area.class%</argument>
            <argument type="service" id="isometriks_symedit.widget.registry" />
            <argument type="service" id="doctrine" />
        </service>

        <service id="isometriks_symedit.widget.listener" class="%isometriks_symedit.widget.listener.class%">
            <argument type="service" id="isometriks_symedit.widget.registry" />
            <tag name="doctrine.event_listener" event="postLoad" />
        </service>

        <!-- Widget Strategies -->

        <service id="isometriks_symedit.widget.strategy.html" class="%isometriks_symedit.widget.strategy.html.class%">
            <tag name="symedit.widget_strategy" />
        </service>

        <service id="isometriks_symedit.widget.strategy.template" class="%isometriks_symedit.widget.strategy.template.class%">
            <argument>%isometriks_symedit.host_bundle%</argument>
            <argument type="service" id="twig" />
            <tag name="symedit.widget_strategy" />
        </service>

        <service id="isometriks_symedit.widget.strategy.contact_info" class="%isometriks_symedit.widget.strategy.contact_info.class%"
                 parent="isometriks_symedit.widget.strategy.template">
            <tag name="symedit.widget_strategy" />
        </service>

        <service id="isometriks_symedit.widget.strategy.blog_recent_posts" class="%isometriks_symedit.widget.strategy.blog_recent_posts.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="doctrine" />
            <argument>%isometriks_symedit.host_bundle%</argument>
            <tag name="symedit.widget_strategy" />
        </service>

        <service id="isometriks_symedit.widget.strategy.blog_categories" class="%isometriks_symedit.widget.strategy.blog_categories.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="doctrine" />
            <argument>%isometriks_symedit.host_bundle%</argument>
            <tag name="symedit.widget_strategy" />
        </service>

        <service id="isometriks_symedit.widget.strategy.slider" class="%isometriks_symedit.widget.strategy.slider.class%">
            <argument type="service" id="service_container" />
            <tag name="symedit.widget_strategy" />
        </service>
    </services>

</container>