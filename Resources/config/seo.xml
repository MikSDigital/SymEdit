<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="isometriks_symedit.seo.page.class">Isometriks\Bundle\SymEditBundle\EventListener\Seo\PageCalculator</parameter>
        <parameter key="isometriks_symedit.seo.post.class">Isometriks\Bundle\SymEditBundle\EventListener\Seo\PostCalculator</parameter>
        <parameter key="isometriks_symedit.seo.category.class">Isometriks\Bundle\SymEditBundle\EventListener\Seo\CategoryCalculator</parameter>
        <parameter key="isometriks_symedit.seo.opengraph.class">Isometriks\Bundle\SymEditBundle\EventListener\Seo\OpenGraphCalculator</parameter>
    </parameters>

    <services>
        <service id="isometriks_symedit.seo.page" class="%isometriks_symedit.seo.page.class%">
            <tag name="seo.calculator" />
        </service>

        <service id="isometriks_symedit.seo.post" class="%isometriks_symedit.seo.post.class%">
            <tag name="seo.calculator" />
        </service>

        <service id="isometriks_symedit.seo.category" class="%isometriks_symedit.seo.category.class%">
            <tag name="seo.calculator" />
        </service>

        <service id="isometriks_symedit.seo.opengraph" class="%isometriks_symedit.seo.opengraph.class%">
            <argument type="service" id="isometriks_settings.settings" />
            <tag name="seo.calculator" />
        </service>
    </services>
</container>