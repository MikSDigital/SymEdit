{% extends 'FOSUserBundle::layout.html.twig' %}

{% block content %}
{% if app.session.flashbag.has('notice') or app.session.flashbag.has('error') %}
<div id="flash">
    <div class="container-fluid">
        <div class="text">
            {% for message in app.session.flashbag.get('notice')|default([]) %}
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4><i class="icon-thumbs-up"></i> Great!</h4>
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.session.flashbag.get('error')|default([]) %}
                <div class="alert alert-block">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4><i class="icon-warning"></i> Great!</h4>
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}

<form method="post" class="form-horizontal" action="{% block action '' %}" {{ form_enctype(form) }}>
    <div class="row-fluid">
        <div class="span3">
            <ul class="nav nav-tabs nav-stacked">
                {% block tabs '' %}
            </ul>

            <div>
                {% block form_actions '' %}
            </div>
        </div>

        <div class="span9">
            <div class="tab-content well">
                {% block tab_content '' %}
                {{ form_rest(form) }}
            </div>
        </div>
    </div>
</form>
{% block extra '' %}
{% endblock %}