{% extends '@SymEdit/Admin/tabbed.html.twig' %}

{% block title %}Blog &raquo; Category &raquo; {{ entity.title }} &raquo; Edit{% endblock %}

{% block form_actions %}
<button class="btn btn-primary btn-block" type="submit">Update Category</button>
<button type="button" class="btn btn-warning btn-block" data-message="Are you sure you want to delete this category?" data-toggle="form-forward" data-target="#category-delete">Delete</button>
{% endblock %}

{% block extra %}
{{ form(delete_form, { attr: { id: 'category-delete', class: 'form-hidden' }}) }}
{% endblock %}
