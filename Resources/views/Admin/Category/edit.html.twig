{% extends 'IsometriksSymEditBundle::base.html.twig' %}

{% block title %}Blog &raquo; Category &raquo; {{ entity.title }} &raquo; Edit{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ path('admin_blog_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    
    <ul class="nav nav-tabs">
        <li class="active"><a href="#basic" data-toggle="tab">Basic</a></li>
        <li><a href="#category-seo" data-toggle="tab">SEO</a></li>
    </ul>
    
    <div class="tab-content">
        <div class="tab-pane active" id="basic">
            {{ form_row(edit_form.title) }}
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.parent) }}
        </div>
            
        <div class="tab-pane" id="category-seo">
            {{ form_widget(edit_form.seo) }}
        </div> 
    </div>
    
    {{ form_rest(edit_form) }}
        
    <div class="form-actions">
        <button class="btn btn-primary" type="submit">Update</button>
        <button type="button" class="btn btn-warning" data-message="Are you sure you want to delete this category?" data-toggle="form-forward" data-target="#category-delete">Delete</button>
    </div>
</form>

<form id="category-delete" class="form-hidden" action="{{ path('admin_blog_category_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
</form>

{% endblock %}
