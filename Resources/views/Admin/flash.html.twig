{% if app.session.flashbag.has('notice') or app.session.flashbag.has('error') %}
<div id="flash">
    <div class="container">
        <div class="text">
            {% for message in app.session.flashbag.get('notice')|default([]) %}
                <div class="message">
                    {{ icon('thumbs-up') }} {{ message }}
                </div>
            {% endfor %}

            {% for message in app.session.flashbag.get('error')|default([]) %}
                <div class="message">
                    {{ icon('warning-sign') }} {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}