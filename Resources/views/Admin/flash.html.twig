{% if app.session.flashbag.has('notice') or app.session.flashbag.has('error') %}
<div id="flash">
    <div class="container">
        <div class="text">
            {% for message in app.session.flashbag.get('notice')|default([]) %}
                <div class="message">
                    <i class="icon-thumbs-up icon-white"></i> {{ message }}
                </div>
            {% endfor %}

            {% for message in app.session.flashbag.get('error')|default([]) %}
                <div class="message">
                    <i class="icon-warning-sign icon-white"></i> {{ message }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}