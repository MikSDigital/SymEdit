<div id="basic" class="tab-pane active">
    {{ form_widget(form.basic) }}
</div>

<div id="social" class="tab-pane">
    {{ form_widget(form.social) }}
</div>

<div id="image" class="tab-pane">
    <div class="row-fluid">
        <div class="span6">
            {{ form_widget(form.image) }}
        </div>
        {% if entity is defined %}
        <div class="span6">
            {% if entity.profile.image %}
            <div class="well">
                <img class="img-polaroid" src="{{ entity.profile.image|constrain({h:200}) }}" />
            </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<div id="summary" class="tab-pane">
    {{ form_widget(form.summary) }}
</div>

<div id="biography" class="tab-pane">
    {{ form_widget(form.biography) }}
</div>

<div id="roles" class="tab-pane">
    {{ form_widget(form.roles) }}
</div>