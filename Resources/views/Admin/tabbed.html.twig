{% extends '@SymEdit/Admin/base.html.twig' %}

{% block content_container %}
<div class="container">
    <div id="content" class="has-sidebar">
        {{ block('content') }}
    </div>
</div>
{% endblock %}


{% block content %}
{% if form is defined %}
{{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
{% endif %}

    <div class="row">
        {% block sidebar %}
        <div id="sidebar">
            {% block tabs %}
            {% if form is defined %}
            {{ form_tabs(form) }}
            {% endif %}
            {% endblock %}

            <div class="actions">
                {% block form_actions %}{% endblock %}
            </div>
        </div>
        {% endblock %}


        <div class="col-md-11 col-md-offset-1 col-sm-9 col-sm-offset-3">
            {% block tab_content %}
            {% if form is defined %}
            {{ form_widget(form) }}
            {% endif %}
            {% endblock %}
        </div>
    </div>

{% if form is defined %}
{{ form_end(form) }}
{% endif %}
{% block extra %}{% endblock %}
{% endblock %}