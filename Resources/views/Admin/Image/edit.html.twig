{% extends '@SymEdit/Admin/base.html.twig' %}

{% block title %}Images &raquo; {{ entity.name }} &raquo; Edit{% endblock %}

{% block content %}

<div class="text-center well">
    <img class="img-polaroid" src="{{ entity.webpath|constrain({w:400, h:300}) }}" />
</div>

{{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update Image</button>
        <button type="button" data-toggle="form-forward" data-message="Are you sure you want to delete this image?" data-target="#image-delete" class="btn btn-warning">Delete Image</button>
    </div>
{{ form_end(form) }}

{{ form(delete_form, {attr: {id: 'image-delete', class: 'form-hidden'}}) }}

{% endblock %}