{% extends 'IsometriksSymEditBundle::base.html.twig' %}

{% block title %}Pages &raquo; {{ entity.title }} &raquo; Edit{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ path('admin_page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    {% include 'IsometriksSymEditBundle:Admin/Page:tabs.html.twig' %}

    <div class="tab-content">
        <div class="tab-pane active" id="basic">
            <div class="row">
                <div class="span6">
                    {{ form_row( edit_form.title ) }}
                    {% if not entity.homepage %}
                      {{ form_row(edit_form.name) }}  
                    {% endif %}
                    {{ form_row( edit_form.tagline ) }}
                </div>
                    
                <div class="span6">
                    {% if not entity.homepage %}
                      {{ form_row( edit_form.parent ) }}
                    {% endif %}
                    {{ form_row( edit_form.display ) }}
                </div>
            </div>

            {{ form_row( edit_form.summary ) }}
            
        </div>
            
        <div class="tab-pane" id="template">
            {{ form_row(edit_form.template) }}
        </div>
            
        <div class="tab-pane" id="seo">
            {{ form_widget( edit_form.seo ) }}
            {{ form_row( edit_form.crawl ) }}
        </div>
            
        <div class="tab-pane" id="page_content">
            <div class="row-fluid">
                {{ form_widget( edit_form.content ) }}
            </div>
        </div>
            
        <div class="tab-pane" id="advanced">
            {{ form_row( edit_form.pageController ) }}
            {{ form_row( edit_form.pageControllerPath ) }}
        </div>
    </div>

    {{ form_rest(edit_form) }}
    
    <div class="form-actions">
        <button class="btn btn-primary" type="submit">Save Page</button>
        {% if is_granted('ROLE_ADMIN_EDITABLE') %}<input class="btn btn-success" name="live_edit" type="submit" value="Save and Live Edit" />{% endif %}
        {% if not entity.homepage %}<button type="button" data-toggle="form-forward" data-message="Are you sure you want to delete this page?" data-target="#page-delete" class="btn btn-warning">Delete Page</button>{% endif %}
    </div>
</form>

{% if not entity.homepage %}
<form class="form-hidden" id="page-delete" action="{{ path('admin_page_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
</form>
{% endif %}

{% endblock %}
