<div id="slider-{{ Slider.name }}" class="carousel slide">
    <div class="carousel-inner">
        {% for slide in Slider.slides %}
            <div class="item{% if loop.first %} active{% endif %}">
                <img src="{{ slide.image.webpath }}" />
                {% if slide.caption %}
                <div class="carousel-caption{% if slide.position %} {{ slide.position }}{% endif %}">
                    {{ slide.caption }}
                </div>
                {% endif %}
            </div>
         {% endfor %}
     </div>
</div>