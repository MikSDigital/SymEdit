{% extends '{{{ bundle }}}:Blog:index.html.twig' %}

{% block title %}{{ SEO.title|default(Post.title) }}{% endblock %}
{% block description %}{{ SEO.description|default(Post.content|striptags|slice(0,150)) }}{% endblock %}

{% block heading '' %}

{% block blog_content %}
<article>
    <h1>
        <a href="{{ path('blog_slug_view', {slug:Post.slug}) }}">{{ Post.title }}</a>
    </h1>
    <div class="author">by 
        {% if Post.author.gplus %}
            <a href="{{ Post.author.gplus }}?rel=author"><img src="https://www.gstatic.com/images/icons/gplus-16.png" alt="{{ Post.author.fullname|plain }} on Google+"></a>
        {% endif %}
        <a href="{{ path('blog_author_view', {username:Post.author.username}) }}">{{ Post.author.fullname }}</a>
    </div>
    <p>
        {% if Post.image %}
            <span class="span3">
                <img class="img-polaroid" src="{{ Post.image.webpath|constrain({w:200,h:400}) }}" alt="{{ Post.title }}" />
            </span>
        {% endif %}
        {{ Post.content|raw }}
    </p>
</article>
{% endblock %}