{% extends '{{{ bundle }}}:Blog:index.html.twig' %}

{% block title %}{{ SEO.title|default(Category.title) }}{% endblock %}
{% block description %}{{ SEO.description|default('Blog posts in ' ~ Category.title) }}{% endblock %}

{% block blog_title %}Category &raquo; {{ Category.title }}{% endblock %}

{% block blog_content %}
    {% if Posts|length > 0 %}
        {% include '{{{ bundle }}}:Blog:list.html.twig' %}
    {% else %}
        There are currently no posts for this category.
    {% endif %}
{% endblock %}