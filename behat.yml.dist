default:
    formatters:
        pretty:
            verbose: true
    suites:
        homepage:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
            filters:
                tags: "@homepage"
        pages:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
            filters:
                tags: "@pages"
        blog:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
                - SymEdit\Bundle\BlogBundle\Behat\BlogContext
            filters:
                tags: "@blog, @posts"
        sitemap:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
                - SymEdit\Bundle\CoreBundle\Behat\SitemapContext
            filters:
                tags: "@sitemap"
        contact:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
            filters:
                tags: "@contact"
        analytics:
            contexts:
                - Behat\MinkExtension\Context\MinkContext
                - SymEdit\Bundle\CoreBundle\Behat\WebContext
                - SymEdit\Bundle\BlogBundle\Behat\BlogContext
                - SymEdit\Bundle\CoreBundle\Behat\AnalyticsContext
            filters:
                tags: "@analytics"
    extensions:
        Behat\MinkExtension:
            sessions:
                default:
                    symfony2: ~
        Behat\Symfony2Extension: ~
